<?xml version="1.0" encoding="UTF-8"?> 
<!-- Launch file for running the delta-arm only -->
<launch>
    <node pkg="tf2_ros" type="static_transform_publisher" name="transform_platform2tooltip" args="0 0 0 0 0 0 platform tooltip" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="transform_platform_init2tooltip_init" args="0 0 0 0 0 0 workspace_center tooltip_init" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="transform_base_link2stewart_base" args="0.31 0 0.1 1.5708 0 1.5708 base_link stewart_base" />

    <arg name="sim" default="false"/>

    <include file="$(find delta_2)/launch/run_manipulator.launch">
        <arg name="sim" value="$(arg sim)"/>
    </include>

    <rosparam>
        /stabilise/velocity: true
        /stabilise/accel: true
    </rosparam>

    <node name="Stabiliser" pkg="delta_2" type="stabilisation_simple.py" required="true" output="screen"/>
</launch>